{
  "name": "tsapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:Release": "env-cmd -f .release.env npm run build",
    "build:UAT": "env-cmd -f .uat.env npm run build",
    "eject": "react-scripts eject",
    "test": "cross-env CI=true react-scripts test --env=jsdom",
    "coverage": "npm test -- --coverage",
    "lint": "eslint ./src/**/*.ts ./src/**/*.tsx",
    "cicdcoverage": "npm test -- --coverage --ci --reporters=default --reporters=jest-junit --coverageReporters=cobertura --coverageReporters=text"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "typescript": "^3.8.3",
    "bootstrap": "^4.4.1",
    "reactstrap": "^8.4.1",
    "env-cmd": "^10.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.2",
    "@testing-library/user-event": "^10.0.1",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "25.2.1",
    "@types/node": "13.11.1",
    "@types/react": "16.9.34",
    "@types/react-adal": "^0.4.2",
    "@types/react-dom": "16.9.6",
    "@types/react-router-dom": "^5.1.3",
    "@types/reactstrap": "^8.4.2",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "jest-junit": "^10.0.0"
  },
  "eslintConfig": {
    "extends": "react-app",
    "overrides": [
      {
        "files": [
          "**/*.ts?(x)"
        ],
        "rules": {
          "eqeqeq": "warn"
        }
      }
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{tsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/serviceWorker.ts",
      "!**/index.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "last 1 edge version"
    ]
  }
}
